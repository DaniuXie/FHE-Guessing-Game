# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to Git!

# ================================
# Deployment Configuration
# ================================

# Private key of the deployer wallet (KEEP THIS SECRET!)
# Example: 0xabcdef1234567890...
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Alchemy API key (get from https://alchemy.com)
ALCHEMY_KEY=your_alchemy_key_here

# ================================
# Network Configuration
# ================================

# Sepolia RPC URL (public or Alchemy)
SEPOLIA_RPC_URL=https://eth-sepolia.public.blastapi.io

# Alternative: Use Alchemy RPC
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/${ALCHEMY_KEY}

# ================================
# Deployed Contract Addresses
# ================================

# FHE Game Contract (will be filled after deployment)
FHE_CONTRACT_ADDRESS=

# Plaintext Game Contract (will be filled after deployment)
PLAINTEXT_CONTRACT_ADDRESS=

# ================================
# Frontend Configuration
# ================================

# These will be injected into the Vite build

# FHE Contract Address
VITE_FHE_CONTRACT_ADDRESS=

# Plaintext Contract Address
VITE_PLAINTEXT_CONTRACT_ADDRESS=

# Network ID (11155111 = Sepolia)
VITE_NETWORK_ID=11155111

# Gateway URL
VITE_GATEWAY_URL=https://gateway.sepolia.zama.ai

# ================================
# Optional: Etherscan Verification
# ================================

# Etherscan API Key (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ================================
# Optional: Additional Services
# ================================

# Infura Project ID (alternative to Alchemy)
# INFURA_PROJECT_ID=your_infura_project_id

# Pinata API Keys (for IPFS deployment)
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_KEY=your_pinata_secret_key

# ================================
# Development Settings
# ================================

# Enable debug logging
DEBUG=false

# Network mode (development/production)
NODE_ENV=development

